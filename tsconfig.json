  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2020", "dom"],
    "types": ["cypress"], 
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
